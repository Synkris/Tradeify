@model Core.ViewModels.WithdrawalViewModel

@{
	ViewData["Title"] = "Withdraw Money";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="contact_section float_left header_text">
	<div class="container">
		<div class="row">

			@if (TempData["Message"] != null)
			{
				var tempDatamessage = (Tradeify.Models.Message)TempData["Message"];
				<partial name="_Message" model="tempDatamessage" />
			}

			<div class="col-lg-12 col-md-12 col-sm-12 col-12">
				<div class="sv_heading_wraper heading_wrapper_dark dark_heading">
					<h3 class="header_text"> Withdraw money </h3>
					<br />
					<h4>Fill the withdrawal Form and the money will be sent to your bank account!</h4>
				</div>
			</div>


			<div class="col-lg-10 offset-lg-1 col-md-12 col-sm-12 col-12">
				<form enctype="multipart/form-data" method="post"  asp-controller="user" asp-action="WithdrawFunds">
					<div class="row">
						<div class="col-lg-6 col-md-6">
							<div class="form-pos">
								<label>Bank Name :</label>
								<div class="form-group i-name">
									<input asp-for="BankAccountName" value="@Model?.BankAccountName" type="text" class="form-control" required placeholder="Bank Name">
								</div>
							</div>
						</div>

						<div class="col-lg-6 col-md-6">
							<div class="form-pos">
								<label>Account Name :</label>
								<div class="form-group i-name">
									<input asp-for="AccountName" value="@Model?.AccountName" type="text" class="form-control" required placeholder="Account Name">
								</div>
							</div>
						</div>

						<div class="col-lg-6 col-md-6">
							<div class="form-pos">
								<label>Account Number :</label>
								<div class="form-group i-name">
									<input asp-for="AccountNumber" value="@Model?.AccountNumber" type="number" class="form-control" required placeholder="Account Number">
								</div>
							</div>
						</div>


						<div class="col-lg-6 col-md-6">
							<div class="form-s">
								<label>How many GGT do you want to withdraw : </label>
								<div class="form-group i-subject">
									<input asp-for="Amount" type="number" class="form-control" required placeholder="Amount in GGT" min="8">
								</div>
							</div>
						</div>

						<div class="col-lg-6 col-md-6">
							<div class="form-s">
								<div class="form-group i-subject">
									<input asp-for="WithdrawalType" type="text" value="Withdrawal To Bank Account" class="form-control" hidden>
								</div>
							</div>
						</div>


						<div class="col-md-12">
							<div class="tb_es_btn_div">
								<div class="tb_es_btn_wrapper conatct_btn2 cont_bnt mb-5">
									<button type="submit" class="submitForm"> Submit Withdrawal </button>
								</div>
							</div>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

