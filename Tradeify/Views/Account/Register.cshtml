@model Core.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Register";

    Layout = "~/Views/Shared/_LayoutTwo.cshtml";
}

<!-- login wrapper start -->
<div class="login_wrapper fixed_portion float_left">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="login_top_box float_left">
                    <div class=" col-lg-5 col-xlg-5 col-md-12 col-sm-12 login_banner_wrapper_without_bg launced_register_banner_wrapper">

                        <div class="jp_regis_center_tag_wrapper jb_register_red_or">
                            <h1>OR</h1>
                        </div>
                    </div>

                    <div class="login_form_wrapper register_wrapper">

                        <div class="sv_heading_wraper heading_wrapper_dark dark_heading hwd">
                            <h3> Register To Enter</h3>
                        </div>

                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="firstName" required type="text" autocomplete="on" placeholder="First Name">
                        </div>

                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="lastName" required type="text" autocomplete="on" placeholder="Last Name">
                        </div>

                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="userName" required type="text" autocomplete="on" placeholder="Username">
                        </div>

                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="phoneNumber" required type="number" autocomplete="on" placeholder="Phone Number">
                        </div>

                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="email" required type="email" autocomplete="on" placeholder="Email">
                        </div>

                        <div class="select_box register_contact">
                            <select id="genderId" asp-items="@(new SelectList(ViewBag.Gender,"Id","Name"))" class="form-control bg-light select">
                            </select>
                        </div>

                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="password" required type="password" autocomplete="on" placeholder="Password">
                        </div>

                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="confirmPassword" required type="password" autocomplete="on" placeholder="Comfirm Password">
                        </div>

                        <div class="mb-1 p-0">
                            <div class="select_box register_contact">
                                <select id="packageId" asp-items="@(new SelectList(ViewBag.Package,"Id","Name"))" class="form-control bg-light select">
                                </select>
                            </div>
                            <div class="select_box register_contact">
                                <select id="cordinatorId" asp-items="@(new SelectList(ViewBag.Cordinator,"CordinatorId","CordinatorUserName"))" class="form-control bg-light select">
                                </select>
                            </div>
                        </div>
                        <div id="selectedPackageDetails"> </div>

                        @*<div class="mb-1 p-4 rounded"> </div>*@
                        <div class="form-group icon_form comments_form register_contact">
                            <input class="form-control" id="refId" type="text" autocomplete="on" hidden>
                        </div>

                        @*<div class="form-group icon_form comments_form register_contact">
                        <input asp-for="RefferrerId" type="text" class="form-control" hidden placeholder="Referral Id*" required>
                        </div>*@

                        <div class="login_remember_box">
                            <label class="control control--checkbox">
                                I agreed to the Terms and Conditions.
                                <input type="checkbox" required>
                                <span class="control__indicator"></span>
                            </label>
                        </div>
                        <button class="about_btn login_btn register_btn float_left badge-pill all-radius" style="background-color: #dba622; padding: 10px;"
                                id="submit_btn" onclick="register()" type="submit">
                            Register
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- login wrapper end -->
<!-- payments wrapper start -->
