@model Core.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutTwo.cshtml";
}

<div class="login_wrapper fixed_portion float_left">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="login_top_box float_left">
                    <div class="login_banner_wrapper">


                        <div class="jp_regis_center_tag_wrapper jb_register_red_or">
                            <h1>OR</h1>
                        </div>
                    </div>


                    <div class="login_form_wrapper">

                        @if (TempData["Message"] != null)
                        {

                            var tempDatamessage = (Tradeify.Models.Message)TempData["Message"];
                            <partial name="_Message" model="tempDatamessage" />
                        }

                        <div class="sv_heading_wraper heading_wrapper_dark dark_heading hwd">
                            <h3> Login to Continue</h3>
                        </div>

                        <div class="form-group icon_form comments_form">
                            <input class="form-control" id="userName" required type="text" placeholder="Username">
                        </div>

                        <div class="form-group icon_form comments_form">
                            <input class="form-control" required id="password" type="password" placeholder="Password">

                        </div>

                        <div class="login_remember_box">
                            <label class="control control--checkbox">
                                Remember me
                                <input asp-for="RememberPassword" type="checkbox">
                                <span class="control__indicator"></span>
                            </label>
                            <a asp-controller="Account" asp-action="ForgotPassword" class="forget_password">Forgot Password</a>
                        </div>
                        <button class="about_btn login_btn float_left badge-pill all-radius" style="background-color: #dba622; padding: 10px;"
                                id="submit_btn" onclick="login()" type="submit">
                            Login
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>