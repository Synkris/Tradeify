@model Core.ViewModels.PasswordResetViewmodel

@{
    ViewData["Title"] = "New Password";
    Layout = "~/Views/Shared/_LayoutTwo.cshtml";
}



<div class="login_wrapper fixed_portion float_left">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="login_top_box float_left">
                    <div class="col-lg-5 forgot_banner_wrapper">


                        <div class="jp_regis_center_tag_wrapper jb_register_red_or">
                            <h1>OR</h1>
                        </div>

                    </div>


                    <form asp-controller="Account" asp-action="ResetPassword" method="post" class="login_form_wrapper">

                        @if (TempData["Message"] != null)
                        {

                            var tempDatamessage = (Tradeify.Models.Message)TempData["Message"];
                            <partial name="_Message" model="tempDatamessage" />
                        }

                        <div class="sv_heading_wraper heading_wrapper_dark dark_heading hwd_forgot">
                            <h3>Enter Your New Password </h3>
                        </div>

                        <input asp-for="Token" class="bg-light form-control col-10 col-sm-12 p-4" hidden />

                        <div class="form-group icon_form comments_form">
                            <input asp-for="Password" type="password" class="form-control" required placeholder="Password*" minlength="6">
                        </div>

                        <div class="form-group icon_form comments_form">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required placeholder="ConfirmPassword*" minlength="6">
                        </div>

                        <button type="submit" class="about_btn login_btn float_left  badge-pill" style="background-color: #dba622;">
                            <a>Save password</a>
                        </button>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>